<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Spot</h1>
    <div class="col-6 offset-3">
        <form action="/spots/<%=spot._id%>?_method=PUT" method="POST" novalidate class="needs-validation"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" value="<%=spot.title%>" name="spot[title]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" value="<%=spot.location%>" name="spot[location]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add More Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Spending Range</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" type="text" class="form-control" value="<%=spot.price%>" placeholder="0.00" name="spot[price]" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="des">Description</label>
                <textarea class="form-control" type="text" id="des" name="spot[description]" required><%=spot.description%></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <% spot.images.forEach(function(img, i) { %>
                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info text-light">Update Spot!</button>
            </div>
        </form>
        <a href="/spots/<%= spot._id %> ">BACK ALL SPOTS</a>
    </div>
</div>
