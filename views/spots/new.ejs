<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Spot</h1>
    <div class="col-6 offset-3">
        <form action="/spots" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="spot[title]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="spot[location]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="spot[image]" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Spending Range</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" type="text" class="form-control" placeholder="0.00" name="spot[price]" aria-label="price" aria-describedby="price-label" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                
            </div>
            <div class="mb-3">
                <label class="form-label" for="des">Description</label>
                <textarea class="form-control" type="text" id="des" name="spot[description]" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Spot!</button>
            </div>
        </form>
        <a href="/spots">BACK ALL SPOTS</a>
    </div>
</div>

