<% layout('layouts/boilerplate') %> 
<div id="cluster-map"></div>
<h1>All SPOTS</h1>
<div>
    <a href="/spots/new">Add Spot!</a>
</div>
<% for (let spot of spots) {%>
<div class="card mb-3" >
    <div class="row">
            <div class="col-md-4">
                <% if(spot.images.length) { %>
                    <img class="img-fluid" src="<%=spot.images[0].url%> " alt="">
                <% } else { %> 
                    <img class="img-fluid" src="https://res.cloudinary.com/yuking/image/upload/v1608951983/TraveWorld/b7kjo8hmafycfwfqymjs.jpg" alt="">
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= spot.title %></h5>
                    <p class="card-tet"><%= spot.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= spot.location %></small> 
                    </p>
                    <a class="btn btn-primary" href="/spots/<%=spot._id %>">View Spot</a>
                </div>
            </div>
    </div>
</div>
<% } %>

<script> 
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>'; 
    const spots = {features: <%- JSON.stringify(spots) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>
